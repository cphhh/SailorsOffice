<div class="col-md-8">
  <h1 style="text-align:left">All deposits</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Amount</th>
          <th></th>
          <th>User</th>
          <th></th>
					<th>Date</th>
          <th></th>
					<th></th>
					<th></th>
        </tr>
      </thead>

      <tbody>
        <% @deposits.each do |deposit| %>
          <tr>
            <td><%= @users.find(deposit.user_id).name %></td>
            <td></td>
            <td><%= deposit.amount %></td>
            <td></td>
            <td><%= deposit.date %></td>
            <td></td>
            <td><%= link_to '<i class="fe fe-trash"></i>'.html_safe, deposit, method: :delete,
                                    data: { confirm: "You sure?" } %></td>
            <td><%= link_to '<i class="fe fe-edit"></i>'.html_safe, [:edit, deposit] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
