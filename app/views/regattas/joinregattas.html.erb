<div class="col-md-8">
  <h1 style="text-align:left">Add crew</h1>
  <hr>

    <div class="row">
      <div class="col-md-1"><b>Name</b></div>
      <div class="col-md-1" style="margin-right: 10px"><b>Startdate</b></div>
      <div class="col-md-1"><b>Enddate</b></div>
      <% @users.each do |user| %>
        <div class="col-md-1"><b><%= user.name %></b></div>
      <% end %>
    </div>

  <% @regattas.each_with_index do |regatta, index| %>
    <%= form_for(regatta) do |f| %>
      <% if index.even? == true %>
        <div class="row">
      <% else %>
        <div class="row">
      <% end %>
        <div class="col-md-1"><%=regatta.name%></div>
        <div class="col-md-1" style="margin-right: 10px"><%=regatta.startdate%></div>
        <div class="col-md-1"><%=regatta.enddate%></div>
        <%= f.collection_check_boxes :user_ids, User.all, :id, :name do |b| %>
          <div class="col-md-1"><td><%= b.check_box(class: "check_box") %></div>
        <% end %>
        <div class="col-md-2"><%= f.submit "Save", class: "btn btn-primary btn-sm" %></div>
      </div>
    <% end %>
  <% end %>
</div>
