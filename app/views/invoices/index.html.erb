<h1>All invoices</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <td></td>
        <th>Price</th>
        <td></td>
        <th>Comment</th>
        <td></td>
        <th>Regatta</th>
        <td></td>
        <th>User</th>
      </tr>
    </thead>

    <tbody>
      <% @invoices.each do |invoice| %>
        <tr>
          <td><%= invoice.name %></td>
          <td></td>
          <td><%= invoice.price %></td>
          <td></td>
          <td><%= invoice.comment %></td>
          <td></td>
          <td><%= @regattas.find(invoice.regatta_id).name %></td>
          <td></td>
          <td><%= @user.find(invoice.user_id).name%></td>
          <td></td>
          <td><%= link_to "delete", invoice, method: :delete,
                                  data: { confirm: "You sure?" } %></td>
          <td></td>
          <td><%= link_to "edit", [:edit, invoice] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
