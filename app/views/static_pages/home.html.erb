    <% if logged_in? %>
     <div class="col-md-8", style="margin-bottom: 55px;">
       <h2>Account Status</h2>
       <hr>

         <div class="col-md-4">
           <h3><small class="text-muted">Your current account balance is </small> <br/>
             <%= @currentbalance %> €</h3>
         </div>

        <div class="col-md-4">
          <h3><small class="text-muted">Your fees and supplement in <%= Date.today.year %></small> <br/>
            <%= @userfeesupp %> €</h3>
        </div>

        <div class="col-md-4">
          <h3><small class="text-muted">Your spendings on Tinto <%= Date.today.year %></small> <br/>
          <%= @totalspendings %> €</h3>
        </div>

      </div>

      <div class="col-md-8">

       <h2>Current Regattas</h2>
       <hr>
       <%= render 'regattas/nextregattas' %>
      </div>
    <% else %>
    <div class="bg">
      <div class="centered">
        <div class="form-signin">
        <img class="mb-4" src=<%= asset_path('logo.png') %> alt="" width="250" style="margin-bottom:10px">
          <%= form_for(:session, url: login_path) do |f| %>

            <%= f.label :email, class: 'sr-only'%>
            <%= f.email_field :email, class: 'form-control', id: 'inputEmail', placeholder: 'Email address'%>

            <%= f.label :password, class: 'sr-only'%>
            <%= f.password_field :password, class: 'form-control', id: 'inputPassword', placeholder: 'Password'%>

            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span style="color:white">Remember me on this computer</span>
            <% end %>

            <%= f.submit "Log in", class: "btn btn-default" %>
          <% end %>
        </div>
      </div>
    <% end %>
</div>
